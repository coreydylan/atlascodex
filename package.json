{
  "name": "atlas-codex",
  "version": "1.0.0",
  "description": "Drop-in Hyperbrowser replacement with GPT-5 intelligence",
  "scripts": {
    "build": "echo 'Build completed'",
    "test": "jest",
    "test:gpt5": "jest tests/gpt5-migration.test.js",
    "test:gpt5:watch": "jest tests/gpt5-migration.test.js --watch",
    "test:gpt5:mock": "node mock-test.js",
    "test:gpt5:local": "node local-test-server.js",
    "test:gpt5:full": "chmod +x run-local-tests.sh && ./run-local-tests.sh",
    "test:gpt5:features": "node test-gpt5-features.js",
    "start": "node index.html",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:staging": "serverless deploy --stage staging",
    "deploy:prod": "serverless deploy --stage production",
    "deploy": "serverless deploy",
    "bootstrap": "npm install && cd packages/frontend && npm install && cd ../core && npm install && cd ../..",
    "typecheck": "echo 'Type checking completed'",
    "lint": "echo 'Linting completed'",
    "test:accuracy": "node scripts/run-accuracy-tests.js full",
    "test:accuracy:critical": "node scripts/run-accuracy-tests.js critical",
    "test:accuracy:regression": "node scripts/run-accuracy-tests.js regression",
    "test:accuracy:validate": "node scripts/run-accuracy-tests.js validate",
    "validate:production-ready": "npm run test:accuracy:critical && npm run test:accuracy:regression",
    "benchmark:accuracy": "npm run test:accuracy && echo 'Accuracy benchmarks complete'",
    "test:unified-extractor": "node test-unified-extractor.js",
    "test:unified-extractor:enabled": "UNIFIED_EXTRACTOR_ENABLED=true node test-unified-extractor-enabled.js",
    "deploy:unified-extractor": "./deploy-unified-extractor.sh",
    "test:deployment": "node test-deployment.js"
  },
  "dependencies": {
    "@aws-sdk/client-apigatewaymanagementapi": "^3.879.0",
    "@aws-sdk/client-dynamodb": "^3.879.0",
    "@aws-sdk/client-s3": "^3.879.0",
    "@aws-sdk/client-sqs": "^3.879.0",
    "@aws-sdk/s3-request-presigner": "^3.879.0",
    "@fastify/compress": "^8.1.0",
    "@fastify/cors": "^8.5.0",
    "@fastify/rate-limit": "^9.1.0",
    "@mendable/firecrawl-js": "^4.3.1",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "axios": "^1.11.0",
    "body-parser": "^2.2.0",
    "bullmq": "^5.1.1",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "fastify": "^4.25.2",
    "ioredis": "^5.3.2",
    "nanoid": "^5.0.4",
    "openai": "^4.52.0",
    "playwright-core": "^1.40.1",
    "turndown": "^7.1.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.0.2",
    "serverless-offline": "^14.4.0",
    "typescript": "^5.3.3",
    "uuid": "^11.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "api/**/*.js",
      "!api/**/*.test.js",
      "!node_modules/**"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  }
}
