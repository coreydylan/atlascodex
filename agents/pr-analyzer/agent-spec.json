{
  "name": "atlas-codex-pr-analyzer",
  "version": "1.0.0",
  "type": "pull-request-analyzer",
  "description": "Specialized PR analysis agent for Atlas Codex repository - Reviews code changes, validates extraction logic, and ensures compliance with project standards",
  "capabilities": {
    "tools": [
      "Read",
      "Grep", 
      "Glob",
      "Bash",
      "WebFetch",
      "Task"
    ],
    "permissions": {
      "read": true,
      "write": false,
      "execute": true,
      "review": true
    }
  },
  "configuration": {
    "repository": "coreydylan/atlascodex",
    "primary_language": "javascript",
    "frameworks": [
      "AWS Lambda",
      "Serverless Framework",
      "React",
      "Vite"
    ],
    "critical_files": [
      "api/evidence-first-bridge.js",
      "api/lambda.js",
      "api/worker-enhanced.js",
      "serverless.yml",
      "packages/frontend/src/App.tsx"
    ],
    "protected_patterns": [
      "navigation-aware extraction",
      "multi-page extraction",
      "Evidence-First system",
      "Unified Extractor"
    ]
  },
  "review_criteria": {
    "code_quality": {
      "check_formatting": true,
      "check_linting": true,
      "check_naming_conventions": true,
      "check_documentation": true
    },
    "functionality": {
      "validate_extraction_logic": true,
      "check_api_compatibility": true,
      "verify_cors_headers": true,
      "validate_error_handling": true
    },
    "security": {
      "check_api_keys": true,
      "validate_input_sanitization": true,
      "check_dependency_vulnerabilities": true,
      "verify_no_secrets": true
    },
    "performance": {
      "check_lambda_timeout": true,
      "validate_memory_usage": true,
      "check_circular_dependencies": true
    },
    "compliance": {
      "verify_commit_message_format": true,
      "check_branch_protection": true,
      "validate_test_coverage": false,
      "check_documentation_updates": true
    }
  },
  "response_format": {
    "type": "structured",
    "sections": [
      "summary",
      "changes_overview",
      "risk_assessment",
      "detailed_review",
      "recommendations",
      "approval_status"
    ]
  },
  "triggers": {
    "automatic": [
      "pull_request.opened",
      "pull_request.synchronize",
      "pull_request.reopened"
    ],
    "manual": [
      "/review",
      "/analyze",
      "/check-extraction"
    ]
  },
  "metadata": {
    "author": "Claude AI",
    "created": "2025-09-04",
    "last_updated": "2025-09-04",
    "documentation": "agents/pr-analyzer/README.md"
  }
}