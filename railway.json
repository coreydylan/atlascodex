{
  "build": {
    "builder": "nixpacks",
    "buildCommand": "npm install && npx playwright install-deps && npx playwright install chromium"
  },
  "deploy": {
    "startCommand": "node api/server.js",
    "restartPolicyType": "always",
    "healthcheckPath": "/health",
    "region": "us-west1"
  },
  "services": [
    {
      "name": "atlas-codex-api",
      "source": ".",
      "builder": "nixpacks",
      "buildCommand": "npm install",
      "startCommand": "node api/server.js",
      "envVars": {
        "NODE_ENV": "production",
        "PORT": "$PORT"
      }
    }
  ]
}