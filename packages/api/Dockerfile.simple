FROM node:20-alpine

WORKDIR /app

# Copy simple API
COPY simple-api.js ./

# Expose port
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD node -e "require('http').get('http://localhost:3000/health', (r) => process.exit(r.statusCode === 200 ? 0 : 1))"

# Run API
CMD ["node", "simple-api.js"]