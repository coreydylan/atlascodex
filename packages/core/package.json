{
  "name": "@atlas-codex/core",
  "version": "1.0.0",
  "description": "Atlas Codex Core - Shared utilities and types",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "eval": "node dist/cli.js eval",
    "eval:vmota": "node dist/cli.js eval --suite vmota",
    "eval:html": "node dist/cli.js eval --format html",
    "templates": "node dist/cli.js templates",
    "stats": "node dist/cli.js stats",
    "production-gates": "npx tsx src/production-gate-runner.ts",
    "production-gates:all": "npx tsx src/production-gate-runner.ts all",
    "production-gates:preflight": "npx tsx src/production-gate-runner.ts preflight"
  },
  "bin": {
    "atlas": "dist/cli.js"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.879.0",
    "@mendable/firecrawl-js": "^4.3.1",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "commander": "^11.1.0",
    "jsdom": "^24.0.0",
    "openai": "^4.24.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@aws-sdk/lib-dynamodb": "^3.879.0",
    "@aws-sdk/util-dynamodb": "^3.879.0",
    "@types/jest": "^29.5.11",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.10.5",
    "@types/turndown": "^5.0.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "node-fetch": "^3.3.2",
    "ts-jest": "^29.4.1",
    "turndown": "^7.2.1",
    "typescript": "^5.3.3"
  }
}
