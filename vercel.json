{
  "buildCommand": "echo 'Static site - no build needed'",
  "outputDirectory": ".",
  "installCommand": "echo 'No dependencies to install'",
  "framework": null,
  "rewrites": [
    {
      "source": "/api/templates/recommend",
      "destination": "/api/templates/index.js"
    },
    {
      "source": "/api/templates/extract", 
      "destination": "/api/templates/index.js"
    },
    {
      "source": "/api/templates/stats",
      "destination": "/api/templates/index.js"
    },
    {
      "source": "/api/templates/eval",
      "destination": "/api/templates/index.js"
    },
    {
      "source": "/api/templates/health",
      "destination": "/api/templates/index.js"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options", 
          "value": "nosniff"
        }
      ]
    }
  ]
}