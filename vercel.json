{
  "version": 2,
  "github": {
    "enabled": true,
    "autoAlias": true
  },
  "git": {
    "deploymentEnabled": {
      "main": true,
      "production": true
    }
  },
  "buildCommand": "cd packages/frontend && npm install && npm run build",
  "outputDirectory": "packages/frontend/dist",
  "framework": "vite",
  "installCommand": "cd packages/frontend && npm install",
  "devCommand": "cd packages/frontend && npm run dev",
  "env": {
    "VITE_API_URL": "@vite_api_url",
    "VITE_API_KEY": "@vite_api_key",
    "ENVIRONMENT": "@environment"
  },
  "build": {
    "env": {
      "VITE_API_URL": "@vite_api_url",
      "VITE_API_KEY": "@vite_api_key",
      "ENVIRONMENT": "@environment"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self' https://gxi4vg8gla.execute-api.us-west-2.amazonaws.com; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline';"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://gxi4vg8gla.execute-api.us-west-2.amazonaws.com/dev/:path*"
    }
  ]
}